<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:gravity="center">
	<LinearLayout android:orientation="vertical" 
	    android:layout_height="fill_parent" 
	    android:layout_width="fill_parent"
	    android:layout_weight="33" 
	    android:gravity="center">
		<com.portman.panel.Airspeed android:id="@+id/airspeed"
		    android:layout_weight="50"  
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" />
		<com.portman.panel.Altimeter android:id="@+id/altimeter"
		    android:layout_weight="50"  
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" />
	</LinearLayout>
	<LinearLayout android:orientation="vertical" 
	    android:layout_height="fill_parent" 
	    android:layout_width="fill_parent"
	    android:layout_weight="33" 
	    android:gravity="center">
		<com.portman.panel.ArtificialHorizon  android:id="@+id/artificial_horizon"
		    android:layout_weight="50"  
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" />
		<com.portman.panel.TurnIndicator android:id="@+id/turn_indicator"
		    android:layout_weight="50"  	   
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" />	
	</LinearLayout>
	<LinearLayout android:orientation="vertical" 
	    android:layout_height="fill_parent" 
	    android:layout_width="fill_parent"
	    android:layout_weight="33" 
	    android:gravity="center">
		<com.portman.panel.Manifold android:id="@+id/manifold"
		    android:layout_weight="50"  
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" />
		<com.portman.panel.RPM 		android:id="@+id/rpm"
		    android:layout_weight="50"  	   
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" />	
	</LinearLayout>
</LinearLayout>
